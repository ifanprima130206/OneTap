<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Magnitude Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/magnitude_badge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_shape" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_magnitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/text_magnitude_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/magnitude_badge"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_wilayah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="32 km BaratLaut RANSIKI-PAPUABRT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/text_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02 Jul 2025 • 17:33:16 WIB"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp">

            <!-- Koordinat Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Koordinat"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_koordinat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.23 LS, 134.02 BT"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Kedalaman Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬇️"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kedalaman"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_kedalaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 km"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Potensi Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌊"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Potensi Tsunami"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_potensi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak berpotensi tsunami"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
